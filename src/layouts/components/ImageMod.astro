---
// Props interface for the component
interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  class?: string;
  style?: any;
}

// Destructuring Astro.props to get the component's props
let { src, alt, width, height, loading, decoding, class: className, style } = Astro.props;

// Handle the image path - src might already include /images/ prefix
let imagePath = src;

if (!src.startsWith('/images/') && !src.startsWith('images/')) {
  imagePath = `/images/${src}`;
}

// For now, just assume images exist - remove file checking to avoid issues
const isValidPath = true;
---

{
  isValidPath && (
    <img
      src={imagePath}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      decoding={decoding}
      class={className}
      style={style}
    />
  )
}
