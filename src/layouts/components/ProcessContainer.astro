---
import ProcessStep from './ProcessStep.astro';

interface ProcessStepProps {
  title: string;
  goal: string;
  action: string;
  icon?: any;
  color?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  steps: ProcessStepProps[];
}

const { title, subtitle, steps } = Astro.props;
---

<div class="mx-auto max-w-2xl lg:max-w-4xl">
  {title && <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">{title}</h2>}
  {subtitle && <p class="mt-4 text-lg leading-8 text-gray-600 dark:text-gray-300">{subtitle}</p>}
  <div class="mt-10 space-y-10 relative">
    {steps.map((step, index) => (
      <ProcessStep
        stepNumber={index + 1}
        isLast={index === steps.length - 1}
        title={step.title}
        goal={step.goal}
        action={step.action}
        icon={step.icon}
        color={step.color}
      />
    ))}
  </div>
</div>